@model Employee


<h1>Are you sure you want to delete this employee?</h1>
<form method="post" asp-action="Delete" asp-route-id="@Model.EmployeeId" enctype="multipart/form-data">
    <input type="hidden" value="CategoryId" id="Categoryid" />
    <div class="form-group">
        <input asp-for="FirstName" class="form-control" placeholder="Name" readonly>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="LastName" class="form-control" placeholder="Name" readonly>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

</form>
<div class="form-group">
    <form asp-action="Delete" method="post" asp-route-id="@Model.EmployeeId">
        <input type="hidden" asp-for="EmployeeId" />
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
    </form>
</div>