@using WepPha2.ViewModels
@model List<UserViewModel>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/css/style_nav_bar.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <h2>Users List</h2>
        <a asp-action="CreateUserAdmin" class="btn btn-custom-color">Create admin</a>
        <a asp-action="CreateUserEmployee" class="btn btn-custom-color">Create employee</a>
        <ul class="list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@Html.DisplayFor(modelItem => item.Email)</strong>
                    </div>
                    <div>
                        <strong>@Html.DisplayFor(modelItem => item.Id)</strong>
                    </div>                 
               
                <div>
                <a type="button" asp-controller="User" asp-action="EditProfile" asp-route-id="@item.Id" class="btn btn-custom-color">Edit</a>
                <a type="button" asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-custom-color">Delete</a>
                </div> 
                </li>
            }
        </ul>
    </div>
</body>
</html>