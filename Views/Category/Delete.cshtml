@model Category


<h1>Are you sure you want to delete this category?</h1>
<form method="post" asp-action="Delete" asp-route-id="@Model.CategoryId" enctype="multipart/form-data">
    <input type="hidden" value="CategoryId" id="Categoryid" />
    <div class="form-group">
        <input asp-for="CategoryName" class="form-control" placeholder="Name" readonly>
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    
</form>
<div class="form-group">
    <form asp-action="Delete" method="post" asp-route-id="@Model.CategoryId">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
    </form>
</div>
