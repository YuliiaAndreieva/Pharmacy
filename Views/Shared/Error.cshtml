@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @if (Model.StatusCode.HasValue)
                        {
                            <span>@Model.StatusCode - @Model.StatusMessage</span>
                        }
                        else
                        {
                            <span>Error</span>
                        }
                    </h1>
                </div>
                <div class="card-body">
                    @if (Model.ShowExceptionMessage)
                    {
                        <h2 class="text-danger mb-3">@Model.ExceptionMessage</h2>
                    }
                    else
                    {
                        <h2 class="text-danger mb-3">An error occurred while processing your request.</h2>
                    }

                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-info">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </div>
                    }

                    @if (Model.ShowExceptionDetails)
                    {
                        <div class="mt-3">
                            <h4>Technical Details:</h4>
                            <div class="bg-light p-3 rounded">
                                <pre class="mb-0"><code>@Model.ExceptionDetails</code></pre>
                            </div>
                        </div>
                    }

                    <div class="mt-4">
                        <a href="javascript:history.back()" class="btn btn-secondary me-2">
                            <i class="fas fa-arrow-left me-1"></i>Go Back
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home me-1"></i>Go to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    pre {
        white-space: pre-wrap;
        word-wrap: break-word;
        font-size: 0.9em;
        color: #666;
    }
    
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .card-header {
        border-bottom: none;
    }
    
    .alert {
        border-radius: 0.375rem;
    }
</style>
